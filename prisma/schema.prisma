generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int                @id @unique @default(autoincrement())
  email            String             @unique
  name             String
  age              Int
  currentWeight    Float
  goalWeight       Float
  height           Float
  password         String
  workoutPlans     WorkoutPlan[]
  likedWorkoutPlan LikedWorkoutPlan[]
  userExerciseHistory UserExerciseHistory[]
}

model LikedWorkoutPlan {
  userId        Int         @unique
  workoutPlanId Int         @unique
  user          User        @relation(fields: [userId], references: [id])
  workoutPlan   WorkoutPlan @relation(fields: [workoutPlanId], references: [id])

  @@id([userId, workoutPlanId])
}

model WorkoutPlan {
  id               Int                @id @unique @default(autoincrement())
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  description      String?           @db.VarChar(500)
  title            String             @db.VarChar(50)
  exercises        Exercise[]
  createdBy        User               @relation(fields: [createdById], references: [id])
  createdById      Int
  likedWorkoutPlan LikedWorkoutPlan[] 
}

model Exercise {
  id               Int           @id @unique @default(autoincrement())
  name             String        @unique
  force            String?
  level            String
  mechanic         String?
  equipment        String?
  primaryMuscles   String[]
  secondaryMuscles String[]
  instructions     String[]
  category      String
  workoutPlans     WorkoutPlan[]
  useExerciseHistory UserExerciseHistory[]
}

model session {
  sid    String   @id @unique @db.VarChar()
  expire DateTime @db.Timestamp(6)
  sess   Json
}

model UserExerciseHistory {
  userId        Int         @unique
  exerciseId    Int         @unique
  weight        Float 
  reps          Int 
  Sets          Int 
  user          User        @relation(fields: [userId], references: [id])
  exercise      Exercise    @relation(fields: [exerciseId], references: [id])
  createdAt     DateTime @default(now())
  @@id([userId, exerciseId])
}
